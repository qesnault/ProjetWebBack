{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>RegisterDate</th>
                <td>{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ user.admin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ user.userId }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_logout') }}">logout</a>
    <a href="{{ path('mes_series_index') }}">My List</a>
    {% if user is defined %}
        {% if user.admin == true %}
            <a href="{{ path('series_new') }}">Add a serie</a>
        {% endif %}
    {% endif %}
{% endblock %}
